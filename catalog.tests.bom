brooklyn.catalog:
  id: brooklyn-mysql-node-tests
  version: 0.2
  itemType: template
  iconUrl: http://www-jp.mysql.com/common/logos/mysql-logo.svg
  name: MySQL Node tests
  description: Test that MySQL Node is running correctly
  license_code: Apache-2.0
  license_url: http://www.apache.org/licenses/LICENSE-2.0.txt
  item:
    services:
    - type: brooklyn-mysql-node
      id: mysqlnode
      name: MySQL Node
      brooklyn.config:
        datastore.creation.script.contents: |
          CREATE DATABASE temporary;
          USE temporary;
          CREATE TABLE users (name VARCHAR(20), owner VARCHAR(20), creation_date DATE, updated_date DATE);
          INSERT INTO users VALUES ('mysql', 'mysql', CURDATE(), CURDATE())
    - type: org.apache.brooklyn.test.framework.TestCase
      name: MySQL Node tests
      targetId: mysqlnode
      brooklyn.config:
        timeout: 1h
      brooklyn.children:

      # Base tests
      - type: org.apache.brooklyn.test.framework.TestCase
        name: Base Tests
        brooklyn.children:
        - type: org.apache.brooklyn.test.framework.TestSensor
          name: Check MySQL server is up
          sensor: service.isUp
          assert:
          - equals: true
        - type: org.apache.brooklyn.test.framework.SimpleShellCommandTest
          name: Check MySQL creating script has been executed
          runDir: $brooklyn:entity("mysqlnode").attributeWhenReady("run.dir")
          command: $brooklyn:formatString("%s/bin/mysql --defaults-file=mymysql.cnf -N -e 'SELECT count(*) FROM users' temporary", $brooklyn:entity("mysqlnode").attributeWhenReady("expandedinstall.dir"))
          assertStatus:
            equals: 0
          assertOut:
            equals: "1"
          assertErr:
            isEmpty: true

      # Effector: executeScript Tests
      - type: org.apache.brooklyn.test.framework.TestCase
        name: "Effector: executeScript Tests"
        brooklyn.children:
        - type: org.apache.brooklyn.test.framework.TestEffector
          name: Invoke executeScript Effector
          effector: executeScript
          params:
            commands: |
              USE temporary;
              INSERT INTO users VALUES ('root', 'root', CURDATE(), CURDATE());
        - type: org.apache.brooklyn.test.framework.SimpleShellCommandTest
          name: Check MySQL creating script has been executed
          runDir: $brooklyn:entity("mysqlnode").attributeWhenReady("run.dir")
          command: $brooklyn:formatString("%s/bin/mysql --defaults-file=mymysql.cnf -N -e 'SELECT count(*) FROM users' temporary", $brooklyn:entity("mysqlnode").attributeWhenReady("expandedinstall.dir"))
          assertStatus:
            equals: 0
          assertOut:
            equals: "2"
          assertErr:
            isEmpty: true

      # Effector: restart Tests
      - type: org.apache.brooklyn.test.framework.TestCase
        name: "Effector: restart Tests"
        brooklyn.children:
        - type: org.apache.brooklyn.test.framework.TestEffector
          name: Invoke restart Effector
          effector: restart
          params:
            restartMachine: false
        - type: org.apache.brooklyn.test.framework.TestSensor
          name: Check MySQL is up after restart
          sensor: service.isUp
          assert:
          - equals: true
        - type: org.apache.brooklyn.test.framework.SimpleShellCommandTest
          name: Check MySQL process has restarted
          command: ps -ef | grep [m]ysql | grep -v 'dhclient'
          assertStatus:
            equals: 0

      # Effector: stop + restart Tests
      - type: org.apache.brooklyn.test.framework.TestCase
        name: "Effector: stop + restart Tests"
        brooklyn.children:
        - type: org.apache.brooklyn.test.framework.TestEffector
          name: Invoke stop Effector
          effector: stop
          params:
            stopMachineMode: NEVER
        - type: org.apache.brooklyn.test.framework.TestSensor
          name: Check MySQL is not up after stop
          sensor: service.isUp
          assert:
          - equals: false
        - type: org.apache.brooklyn.test.framework.SimpleShellCommandTest
          name: Check MySQL process has stopped
          command: ps -ef | grep [m]ysql | grep -v 'dhclient'
          assertStatus:
            equals: 1
        - type: org.apache.brooklyn.test.framework.TestEffector
          name: Invoke restart Effector
          effector: restart
          params:
            restartMachine: false
        - type: org.apache.brooklyn.test.framework.TestSensor
          name: Check MySQL is up after restart
          sensor: service.isUp
          assert:
          - equals: true
        - type: org.apache.brooklyn.test.framework.SimpleShellCommandTest
          name: Check MySQL process has restarted
          command: ps -ef | grep [m]ysql | grep -v 'dhclient'
          assertStatus:
            equals: 0

      # Effector: change_password Tests
      - type: org.apache.brooklyn.test.framework.TestCase
        name: "Effector: change_password Tests"
        brooklyn.children:
        - type: org.apache.brooklyn.test.framework.TestEffector
          name: Invoke change_password Effector
          effector: change_password
          params:
            password: myPassword
        - type: org.apache.brooklyn.test.framework.TestSensor
          name: Check MySQL password has changed
          sensor: mysql.password
          assert:
          - equals: myPassword
